<!doctype html>
<html ng-app="mean">
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.16/angular.min.js"></script>
        <script src="/js/FilmesController.js"></script>
    </head>
    <body>
        <h1>Bem vindo ao treinamento de MEAN Stack do Alura!</h1>
        <div ng-controller="FilmesController">

            <form ng-submit="enviarFilme(filme)">
                Titulo :  <input type="text" ng-model="filme.titulo"><br><br>
                Diretor : <input type="text" ng-model="filme.diretor"><br><br>
                Ano :     <input type="text" ng-model="filme.ano"><br><br>
                <input type="submit">
            </form>
            <table border="1">
                <thead>
                <th width="50%" >Titulo</th>
                <th width="20%" >Diretor</th>
                <th width="10%" >Ano</th>
                <th width="10%" ></th>
                <th width="10%" ></th>
                </thead>
                <tbody>
                    <tr ng-repeat="filme in filmes" >
                        <td>{{ filme.titulo }}</td>
                        <td>{{ filme.diretor }}</td>
                        <td>{{ filme.ano }}</td>
                        <td><a href="#" ng-click="editar(filme)"  >Editar</a></td>
                        <td><a href="#" ng-click="excluir(filme)">Excluir</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
</html>