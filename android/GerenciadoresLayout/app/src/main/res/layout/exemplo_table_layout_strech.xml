<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:stretchColumns="1">

    <TextView
        android:textAlignment="center"
        android:layout_height="60dp"
        android:background="#FF9090"
        android:textSize="30dp"
        android:text="Lista de Produtos"/>

    <TableRow>
        <TextView
            android:textSize="20dp"
            android:text="Produto 1"/>
        <TextView
            android:textSize="20dp"
            android:text="R$ 100,00" android:layout_gravity="right"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textSize="20dp"
            android:text="Produto 2"/>
        <TextView
            android:textSize="20dp"
            android:text="R$ 200,00" android:layout_gravity="right"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textSize="20dp"
            android:text="Produto 3"/>
        <TextView
            android:textSize="20dp"
            android:text="R$ 300,00" android:layout_gravity="right"/>
    </TableRow>
    <View android:layout_height="40dp" android:background="#CCCCCC" />
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="match_parent" android:background="#9999FF"
        android:layout_gravity="bottom" android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprar"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>

    </LinearLayout>

</TableLayout>